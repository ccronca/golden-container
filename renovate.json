{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "America/New_York",
  "schedule": ["before 10pm"],
  "dockerfile": {
    "fileMatch": ["^Containerfile$"]
  },
  "tekton": {
    "fileMatch": ["^\\.tekton/*.yaml$"],
    "pinDigests": true
  }
}
